/*Link to the question : https://www.hackerrank.com/contests/codestorm/challenges/emmas-notebook/submissions/code/6508864*/

#include <iostream>
#include<stdlib.h>
using namespace std;
int main()
{
	long t;
	cin>>t;
	if(t<1)
		exit(0);
	long count=0;
	long no1=0;
	for(int i=0; i<=t; i++)
	{
		if(i==1)
			count=1;
		no1=no1+count;
		if((i%2)!=0)
			count++;
	}
	cout<<no1;
	return 0;
}
